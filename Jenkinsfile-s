pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Récupérer le code de votre dépôt Git
                git url: 'https://github.com/dhaouzeineb/tp-foyer.git', branch: 'zeineb'
            }
        }
        stage('Build') {
            steps {
                // Compiler le code avec Maven
                sh 'mvn clean compile'
            }
        }
        stage('SonarQube Analysis') {
            steps {
                script {
                    // Spécifiez le chemin d'installation du scanner SonarQube
                    def scannerHome = tool 'SonarQube Scanner'
                    withSonarQubeEnv('sonarqube1') {
                        // Exécutez l'analyse SonarQube
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }
    }
    post {
        success {
            echo 'SonarQube analysis completed successfully.'
        }
        failure {
            echo 'SonarQube analysis failed.'
        }
    }
}
