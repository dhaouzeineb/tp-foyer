pipeline {
    agent any

    environment {
        MAVEN_HOME = '/usr/share/maven'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'hassen', url: 'https://github.com/dhaouzeineb/tp-foyer.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    sh "${MAVEN_HOME}/bin/mvn clean install"
                }
            }
        }

        stage('Upload to Nexus') {
            steps {
                script {
                    sh "${MAVEN_HOME}/bin/mvn deploy"

                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
        }
    }
}
